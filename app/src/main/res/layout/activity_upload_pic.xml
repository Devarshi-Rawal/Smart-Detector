<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".upload_pic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add the image of damaged section observed by you in 'Before Repairing'. Also ask for image of same section, after repairing from the head of worker crew and attach it to 'After Repairing'."
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:paddingTop="100dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before Repairing"
            android:textSize="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After Repairing"
            android:textSize="20dp"
            android:layout_marginTop="69dp"
            android:layout_marginLeft="30dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/before_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp">

        </ImageView>

        <ImageView
            android:id="@+id/after_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_insert_photo_black_24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/captureimage_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Image"
            android:background="@color/waterblue"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp">

        </Button>

        <Button
            android:id="@+id/captureimage_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Image"
            android:background="@color/waterblue"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="17dp"
            android:background="@color/waterblue"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp">

        </Button>

    </LinearLayout>

</LinearLayout>